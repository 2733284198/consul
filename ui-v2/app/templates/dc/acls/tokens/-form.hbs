<form>
{{#if (not (token/is-legacy this.item))}}
  {{partial 'dc/acls/tokens/fieldsets'}}
{{else}}
  {{partial 'dc/acls/tokens/fieldsets-legacy'}}
{{/if}}
    {{!TODO: Make this into a slotted component}}
    <div>
{{#if this.create }}
  {{! new tokens can be saved without you filling anything in, old tokens remain using isPristine }}
        <button type="submit" {{ action "create" this.item}} disabled={{if (or (and (token/is-legacy this.item) this.item.isPristine) this.item.isInvalid) 'disabled'}}>Save</button>
{{ else }}
        <button type="submit" {{ action "update" this.item}} disabled={{if this.item.isInvalid 'disabled'}}>Save</button>
{{/if}}
        <button type="reset" {{ action "cancel" this.item}}>Cancel</button>
{{# if (and (not this.create) (not (token/is-anonymous this.item)) (not-eq this.item.AccessorID this.token.AccessorID) ) }}
        <ConfirmationDialog @message="Are you sure you want to delete this Token?">
            <BlockSlot @name="action" as |confirm|>
                <button type="button" data-test-delete class="type-delete" {{action confirm 'delete' this.item}}>Delete</button>
            </BlockSlot>
            <BlockSlot @name="dialog" as |execute cancel message|>
              <DeleteConfirmation @message={{message}} @execute={{execute}} @cancel={{cancel}} />
            </BlockSlot>
        </ConfirmationDialog>
{{/if}}
    </div>
</form>
