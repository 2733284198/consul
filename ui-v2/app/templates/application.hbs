<HeadLayout />
{{title 'Consul' separator=' - '}}
{{#if (not-eq this.router.currentRouteName 'application')}}
  <HashicorpConsul
    id="wrapper"
    @permissions={{this.permissions}}
    @dcs={{this.dcs}}
    @dc={{or this.dc this.dcs.firstObject}}
    @nspaces={{this.nspaces}}
    @nspace={{or this.nspace this.nspaces.firstObject}}
    @onchange={{action "reauthorize"}}
  >
  <Outlet
  @name="application"
  as |o|>
    {{outlet}}
  </Outlet>
    <ConsulLoader class="view-loader" />
  </HashicorpConsul>
{{/if}}
