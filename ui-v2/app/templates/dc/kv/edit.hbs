{{#if this.item.Key }}
  {{title 'Edit Key/Value'}}
{{else}}
  {{title 'New Key/Value'}}
{{/if}}
<AppView>
  <BlockSlot @name="breadcrumbs">
    <ol>
        <li><a data-test-back href={{href-to 'dc.kv.index'}}>Key / Values</a></li>
{{#if (not-eq this.parent.Key '/')}}
  {{#each (slice 0 -1 (split this.parent.Key '/')) as |breadcrumb index|}}
        <li><a href={{href-to 'dc.kv.folder' (join '/' (append (slice 0 (add index 1) (split this.parent.Key '/')) ''))}}>{{breadcrumb}}</a></li>
  {{/each}}
{{/if}}
    </ol>
  </BlockSlot>
  <BlockSlot @name="header">
      <h1>
{{#if this.item.Key}}
        {{left-trim this.item.Key this.parent.Key}}
{{else}}
        New Key / Value
{{/if}}
      </h1>
  </BlockSlot>
  <BlockSlot @name="content">
  {{#if this.session}}
    <p class="notice warning">
      <strong>Warning.</strong> This KV has a lock session. You can edit KV's with lock sessions, but we recommend doing so with care, or not doing so at all. It may negatively impact the active node it's associated with. See below for more details on the Lock Session and see <a href="{{env 'CONSUL_DOCS_URL'}}/internals/sessions.html" target="_blank" rel="noopener noreferrer">our documentation</a> for more information.
    </p>
  {{/if}}
    <ConsulKvForm
      @item={{this.item}}
      @dc={{this.dc}}
      @nspace={{this.nspace}}
      @onsubmit={{if (eq this.parent.Key '/') (transition-to 'dc.kv.index') (transition-to 'dc.kv.folder' this.parent.Key)}}
      @parent={{this.parent}}
    />
  {{#if this.session}}
    <ConsulSessionForm
      @item={{this.session}}
      @dc={{this.dc}}
      @nspace={{this.nspace}}
      @onsubmit={{action (mut this.session) undefined}}
    />
  {{/if}}
  </BlockSlot>
</AppView>