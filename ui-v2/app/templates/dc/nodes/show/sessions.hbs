<EventSource @src={{this.sessions}} />
<div id="lock-sessions" class="tab-section">
  <div role="tabpanel">
{{#if (gt this.sessions.length 0)}}
    <ConsulLockSessionList @items={{this.sessions}} @onInvalidate={{action this.send 'invalidateSession'}} />
{{else}}
    <EmptyState>
      <BlockSlot @name="body">
        <p>
          There are no Lock Sessions for this Node. For more information, view <a href="{{ env 'CONSUL_DOCS_URL'}}/internals/sessions.html" rel="noopener noreferrer" target="_blank">our documentation</a>
        </p>
      </BlockSlot>
    </EmptyState>
{{/if}}
  </div>
</div>
