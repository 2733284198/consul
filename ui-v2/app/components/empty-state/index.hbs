{{yield}}
<div class="empty-state" ...attributes>
{{#if this.hasHeader}}
  <header>
    {{#yield-slot name="header"}}
      {{yield}}
    {{/yield-slot}}
    {{#yield-slot name="subheader"}}
      {{yield}}
    {{/yield-slot}}
  </header>
{{/if}}
  {{#yield-slot name="body"}}
    <div>
      {{yield}}
      {{#if (and (env 'CONSUL_ACLS_ENABLED') this.allowLogin)}}
        <label for="login-toggle" data-test-empty-state-login>
          <DataSource
            @src="settings://consul:token"
            @onchange={{action (mut this.token) value="data"}}
          />
          {{#if this.token.AccessorID}}
            Log in with a different token
          {{else}}
            Log in
          {{/if}}
        </label>
      {{/if}}
    </div>
  {{/yield-slot}}
  {{#yield-slot name="actions"}}
    <ul>
      {{yield}}
    </ul>
  {{/yield-slot}}
</div>