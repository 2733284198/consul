{{#if (env "CONSUL_NSPACES_ENABLED")}}
namespace "{{this.nspace}}" {
  service "{{this.name}}" {
	  policy = "write"
  }
  service "{{this.name}}-sidecar-proxy" {
	  policy = "write"
  }
  service_prefix "" {
	  policy = "read"
  }
  node_prefix "" {
	  policy = "read"
  }
}
{{else}}
service "{{this.name}}" {
	policy = "write"
}
service "{{this.name}}-sidecar-proxy" {
	policy = "write"
}
service_prefix "" {
	policy = "read"
}
node_prefix "" {
	policy = "read"
}
{{/if}}