{{yield}}
<li role="none" ...attributes>
{{#if this.hasConfirmation}}
  <label for={{concat this.menu.confirm this.guid}} role="menuitem" tabindex="-1" onkeypress={{this.menu.keypressClick}}>
    <YieldSlot @name="label">{{yield}}</YieldSlot>
  </label>
  <div role="menu">
    <YieldSlot @name="confirmation" @params={{
      block-params (component 'confirmation-alert'
        onclick=(queue (action this.onclick) (action this.menu.clickTrigger))
        name=(concat this.menu.confirm this.guid)
      )
    }}>{{yield}}</YieldSlot>
  </div>
{{else if this.href}}
{{#let (string-includes this.href '://') as |external|}}
  <a
    role="menuitem" tabindex="-1" onclick={{action this.menu.clickTrigger}} href={{href}} target={{if external '_blank'}} rel={{if external 'noopener noreferrer'}}
  >
    <YieldSlot @name="label">
    {{yield}}
    </YieldSlot>
  </a>
{{/let}}
{{else}}
<button
  type="button"
  role="menuitem"
  aria-selected={{if this.selected 'true'}}
  tabindex="-1"
  onclick={{queue
    (action (or this.onclick (noop)))
    (action (if this.close this.menu.clickTrigger (noop)))
  }}>
    <YieldSlot @name="label">
      {{yield}}
    </YieldSlot>
  </button>
{{/if}}
</li>

