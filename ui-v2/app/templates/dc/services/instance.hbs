{{title this.item.Service.ID}}
<EventSource @src={{this.item}} @onerror={{action "error"}} />
<EventSource @src={{this.proxy}} />
<EventSource @src={{this.proxyMeta}} />
<AppView>
    <BlockSlot @name="notification" as |status type|>
      {{partial 'dc/services/notifications'}}
    </BlockSlot>
    <BlockSlot @name="breadcrumbs">
        <ol>
            <li><a data-test-back href={{href-to 'dc.services'}}>All Services</a></li>
            <li><a data-test-back href={{href-to 'dc.services.show'}}>Service ({{this.item.Service.Service}})</a></li>
        </ol>
    </BlockSlot>
    <BlockSlot @name="header">
      <h1>
        {{ this.item.Service.ID }}
      </h1>
      <ConsulExternalSource @item={{this.item}} />
      <ConsulKind @item={{this.item}} @withInfo={{true}} />
    </BlockSlot>
    <BlockSlot @name="nav">
      <dl>
        <dt>Service Name</dt>
        <dd><a href="{{href-to 'dc.services.show' this.item.Service.Service}}">{{this.item.Service.Service}}</a></dd>
      </dl>
      <dl>
        <dt>Node Name</dt>
        <dd><a href="{{href-to 'dc.nodes.show' this.item.Node.Node}}">{{this.item.Node.Node}}</a></dd>
      </dl>
    </BlockSlot>
    <BlockSlot @name="actions">
      {{#let (or this.item.Service.Address this.item.Node.Address) as |address|}}
        <CopyButton @value={{address}} @name="Address">{{address}}</CopyButton>
      {{/let}}
    </BlockSlot>
    <BlockSlot @name="content">
        <TabNav @items={{
          compact
              (array
                      (hash label="Health Checks" href=(href-to "dc.services.instance.healthchecks") selected=(is-href "dc.services.instance.healthchecks"))
(if
  (eq this.item.Service.Kind 'mesh-gateway')
                      (hash label="Addresses" href=(href-to "dc.services.instance.addresses") selected=(is-href "dc.services.instance.addresses"))
                      ""
)
(if this.proxy
                      (hash label="Proxy Info" href=(href-to "dc.services.instance.proxy") selected=(is-href "dc.services.instance.proxy"))

)
(hash label="Tags & Meta" href=(href-to "dc.services.instance.metadata") selected=(is-href "dc.services.instance.metadata"))
              )
        }} />
      <Outlet
        @name={{this.routeName}}
      as |o|>
        {{outlet}}
      </Outlet>
    </BlockSlot>
</AppView>